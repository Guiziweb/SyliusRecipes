{
    "bundles": {
        "Guiziweb\\SyliusShoppingAssistantPlugin\\GuiziwebSyliusShoppingAssistantPlugin": [
            "all"
        ]
    },
    "copy-from-recipe": {
        "config/": "%CONFIG_DIR%/"
    },
    "add-lines": [
        {
            "file": "assets/shop/entrypoint.js",
            "content": "import '@vendor/guiziweb/sylius-shopping-assistant-plugin/assets/shop/entrypoint';",
            "position": "after_target",
            "target": "import './bootstrap.js';"
        },
        {
            "file": "assets/admin/entrypoint.js",
            "content": "import '@vendor/guiziweb/sylius-shopping-assistant-plugin/assets/admin/entrypoint';",
            "position": "after_target",
            "target": "import './bootstrap.js';"
        },
        {
            "file": "package.json",
            "content": "    \"marked\": \"^15.0.4\",",
            "position": "after_target",
            "target": "  \"dependencies\": {"
        }
    ]
}
